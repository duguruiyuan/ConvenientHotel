<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="请填写你要发布的房间信息"
                android:gravity="center_vertical"
                android:textColor="@color/deep_black_text_color"
                android:layout_margin="@dimen/activity_horizontal_margin"/>
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="房间名称"
                app:edit_text_hint="为您发布的房间取一个好听的名字"
                app:text_name_width="60dp"
                android:id="@+id/name"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="房间面积"
                app:edit_text_hint="发布的房间面积(平方/米)"
                app:text_name_width="60dp"
                android:id="@+id/room_area" />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="房间价格"
                app:edit_text_hint="住一天的价格(天/元)"
                app:text_name_width="60dp"
                android:id="@+id/room_price"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="房子类型"
                app:edit_text_hint="请选择房子类型"
                app:text_name_width="60dp"
                app:edit_text_image="@drawable/dropdown"
                android:id="@+id/room_type"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="所在地"
                app:edit_text_hint="请选择所在地"
                app:text_name_width="60dp"
                app:edit_text_image="@drawable/dropdown"
                android:id="@+id/choose_city"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="详细地址"
                app:edit_text_hint="点击从地图上选择"
                app:text_name_width="60dp"
                app:edit_text_image="@drawable/dropdown"
                android:id="@+id/choose_city_map"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="门牌号"
                app:edit_text_hint="填写门牌号"
                app:text_name_width="60dp"
                android:id="@+id/house_number"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="到期时间"
                app:edit_text_hint="点击选择这条发布的失效时间"
                app:text_name_width="60dp"
                app:edit_text_image="@drawable/dropdown"
                android:id="@+id/choose_publish_end_date"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <hotel.convenient.com.view.LinearLayoutEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_name="说明"
                app:edit_text_hint="填写房子的一些说明/对租客的一些要求"
                app:text_name_width="60dp"
                android:id="@+id/room_description"
                app:edit_text_color="@color/loginPageTextColor"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <LinearLayout
                    android:id="@+id/ll_add_image_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_add_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rectangle_box_dash"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/add"
                            android:text="添加房间照片"
                            android:drawablePadding="5dp"
                            android:textColor="@color/gray_color"
                            />

                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/confirm_height"
                android:layout_marginLeft="@dimen/confirm_horizontal_margin"
                android:layout_marginRight="@dimen/confirm_horizontal_margin"
                android:background="@drawable/confirm_selector"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/next_confirm"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="36dp"/>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>