<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <include
        android:id="@+id/line_top"
        layout="@layout/horizontal_line"></include>
    <LinearLayout
        android:id="@+id/input_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_item_height"
        android:orientation="horizontal"
        android:padding="1dp"
        >
        <TextView
            android:id="@+id/input_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="left|center_vertical"
            android:text="123"/>
        <ImageView
            android:id="@+id/input_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="请输入手机号码"
            android:id="@+id/input_text"
            android:layout_marginLeft="13dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="@color/deep_black_text_color_more"
            android:visibility="gone"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入手机号码"
            android:textColorHint="@color/loginPageTextColor"
            android:textSize="14sp"
            android:id="@+id/input_value"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            />
        
<ImageView
    android:id="@+id/input_edit_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="gone"
    android:layout_marginRight="12dp"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="获取验证码"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/input_button"
            android:gravity="center"
            android:textColor="@color/blue_text"
            />
        <LinearLayout
            android:id="@+id/input_ll_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@mipmap/img_cancel"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/input_cancel"
                android:layout_gravity="center"
                />
        </LinearLayout>
        
    </LinearLayout>
    <include
        android:id="@+id/line_bottom"
        layout="@layout/horizontal_line"></include>
</LinearLayout>