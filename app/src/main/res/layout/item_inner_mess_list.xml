<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="9dp"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="信息提示:充值1.0元成功"
            android:textSize="15sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/deep_black_text_color_more"
           />
        <TextView
            android:id="@+id/tv_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="14dp"
            android:text="系统发送呵呵呵呵呵呵呵呵呵呵呵啊啊啊啊啊呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵顶顶顶顶顶"
            android:textColor="@color/black_text_color"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            />

        <include
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/tv_article"
            android:layout_below="@id/tv_article"
            android:layout_marginTop="24dp"
            layout="@layout/line_view"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignLeft="@id/tv_line"
            android:layout_below="@id/tv_line"
            android:text="系统发送"
            android:textColor="@color/black_text_color"
            android:textSize="12sp"
            android:gravity="center_vertical"
             />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_type"
            android:text="2015年12月23日"
            android:textColor="@color/black_text_color"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
           />

    </RelativeLayout>


</LinearLayout>