<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mapView"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/pick_start_date">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="入住"
                    android:textColor="@color/gray_text_color"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="03-04"
                    android:textColor="@color/deep_black_text_color_more"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/start_date_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="今天"
                    android:textColor="@color/deep_black_text_color_more"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/pick_end_date">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="离店"
                    android:textColor="@color/gray_text_color"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/deep_black_text_color_more"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/end_date_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="明天"
                    android:textColor="@color/deep_black_text_color_more"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    />
                
            </LinearLayout>
            <TextView
                android:id="@+id/tv_count_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:text="共5天"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_has_next_page"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>