<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="12dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/rectangle_box_orange"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:drawableLeft="@drawable/may"
            android:drawablePadding="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/deep_black_text_color_more"
            android:id="@+id/pick_city" />
        
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="景点/商圈/客栈名"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textSize="12dp"
            android:textColor="@color/gray_text_color"
            android:background="@color/blue_background"
            android:id="@+id/pick_desc_local" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/pick_start_date">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="入住"
            android:textColor="@color/gray_text_color"
            android:gravity="center"
            android:layout_marginLeft="32dp"/>
        
        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/deep_black_text_color_more"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/start_date_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="今天"
            android:textColor="@color/deep_black_text_color_more"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            />
        </LinearLayout>
        <View
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/pick_end_date">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="离店"
                android:textColor="@color/gray_text_color"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/deep_black_text_color_more"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/end_date_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="明天"
                android:textColor="@color/deep_black_text_color_more"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_has_next_page"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_view"/>
    
    <LinearLayout
        android:id="@+id/dealer_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>